{
  "name": "node-small-app",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.0",
    "@types/node": "^9.4.7",
    "@types/tape": "^4.2.32",
    "bpk-component-button": "^2.0.11",
    "bpk-component-card": "^1.1.4",
    "bpk-component-code": "^1.0.53",
    "bpk-component-grid": "^1.1.60",
    "bpk-component-icon": "^3.18.0",
    "bpk-component-image": "^2.0.24",
    "bpk-component-link": "^1.1.9",
    "bpk-component-panel": "^1.0.53",
    "bpk-component-text": "^1.0.51",
    "bpk-mixins": "^17.5.0",
    "bpk-stylesheets": "^3.2.97",
    "chalk": "1.1.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "tape": "^4.9.0",
    "ts-jest": "^22.4.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "backpack-react-scripts": "5.0.9",
    "es6-promise": "^3.2.1",
    "isomorphic-fetch": "^2.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "scripts": {
    "client": "react-scripts start",
    "build-client": "react-scripts build",
    "test-client": "react-scripts test --env=jsdom",
    "lint:scss": "stylelint 'src/**/*.scss' --syntax scss",
    "lint:scss:fix": "stylefmt --recursive 'src/**/*.scss'",
    "lint:js": "eslint . --ignore-path .gitignore --ext .js,.jsx",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint-client": "npm run lint:js && npm run lint:scss",
    "eject": "react-scripts eject",
    "build-server": "./node_modules/.bin/tsc ./server/src/server.ts --outDir dist/server/ --lib es7 --target ES5 --allowJs true",
    "server": "node dist/server/server.js",
    "start-server-hot": "nodemon --exec ./node_modules/.bin/ts-node -- ./server/src/server.ts",
    "help": "echo - the server have to be build before running (or run as hot)",
    "format": "prettier --write **/*.*",
    "lint": "tslint --project ./tslint.json -t verbose",
    "precommit": "lint-staged",
    "prepush": "yarn lint",
    "start": "yarn start-server-hot",
    "test": "jest --watch"
  },
  "eslintConfig": {
    "extends": "./eslint.js"
  }
}
